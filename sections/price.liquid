{% style %}
  .price {
    width: 100%;
    background-color: #EFF6F3;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .container {
    width: 100%;
    max-width: 1024px;
    display: flex;
    gap: 24px;
    padding: 30px 0;
  }


  @media (max-width: 575.98px) {
    .container {
      padding: 30px 16px;
      flex-direction: column;
    }
  }


  @media (min-width: 576px) and (max-width: 767.98px) {
    .container {
      display: grid;
      padding: 30px 32px;
      grid-template-columns: 1fr 1fr;
    }
  }


  @media (min-width: 768px) and (max-width: 991.98px) {
    .container {
      display: grid;
      padding: 30px 32px;
      grid-template-columns: 1fr 1fr;
    }
  }


  @media (min-width: 992px) and (max-width: 1199.98px) {
    .container {
      align-items: center;
      justify-content: center;
    }
  }


  @media (min-width: 1200px) {
    .container {
      align-items: center;
      justify-content: center;
    }
  }


{% endstyle %}


{% schema %}
  {
    "name": "Price",
    "blocks": [
      {
        "type": "price-card",
        "name": "PriceCard",
        "settings": [
          {
            "type": "number",
            "id": "card-price",
            "label": "Price"
          },
          {
            "type": "textarea",
            "id": "card-description",
            "label": "Description"
          },
          {
            "type": "text",
            "id": "card-badge-title",
            "label": "Badge Title"
          },
          {
            "type": "color",
            "id": "card-badge-bg",
            "label": "Badge Background"
          }, {
            "type": "color",
            "id": "card-badge-text-color",
            "label": "Badge Text Color"
          }, {
            "type": "text",
            "id": "card-button-title",
            "label": "Button Title"
          }, {
            "type": "color",
            "id": "card-button-bg",
            "label": "Button Background"
          }, {
            "type": "color",
            "id": "card-button-text-color",
            "label": "Button Text Color"
          }, {
            "type": "checkbox",
            "id": "feature-png-templates",
            "label": "PNG templates",
            "default": true
          }, {
            "type": "checkbox",
            "id": "feature-figma-components",
            "label": "Figma responsive components",
            "default": false
          }, {
            "type": "checkbox",
            "id": "feature-constant-updates",
            "label": "Constant updates",
