<section id="shopify-section-{{ section.id  }}" class="price">
  <div class="container">
    {% for card in section.blocks %}
      {% render "price-card"
        , price: card.settings.card-price
        , description: card.settings.card-description
        , badgeTitle: card.settings.card-badge-title
        , badgeBg: card.settings.card-badge-bg
        , badgeTextColor: card.settings.card-badge-text-color
        , buttonTitle: card.settings.card-button-title
        , buttonBg: card.settings.card-button-bg
        , buttonTextColor: card.settings.card-button-text-color
        , featurePngTemplate: card.settings.feature-png-templates
        , featureFigmaComponent: card.settings.feature-figma-components
        , featureConstantUpdate: card.settings.feature-constant-updates %}
    {% endfor %}
  </div>
</section>