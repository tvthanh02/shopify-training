{% schema %}
{
  "name": "Simple Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Here is a short description of our store."
    }
  ],
  "presets": [
    {
      "name": "Simple Section"}
      
  ]
}
{% endschema %}

<div class="simple-section">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.description }}</p>
</div>
